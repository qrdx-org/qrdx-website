{
  "name": "qrdx-website",
  "version": "1.0.0",
  "description": "A modern Next.js website with Tailwind CSS and shadcn/ui",
  "private": true,
  "scripts": {
    "dev": "bun --bun run next dev --turbopack",
    "prebuild": "bash scripts/generate-whitepaper-pdf.sh || echo 'Warning: PDF generation skipped (pandoc not available)'",
    "build:nobun": "pnpm exec next build",
    "build": "bun --bun run next build",
    "fullbuild": "pnpm run prebuild && pnpm run build:nobun",
    "start": "bun --bun run next start",
    "lint": "bun --bun run next lint",
    "clean": "rm -rf .next node_modules",
    "generate-pdf": "bash scripts/generate-whitepaper-pdf.sh"
  },
  "keywords": [
    "nextjs",
    "react",
    "tailwindcss",
    "shadcn"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.4",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.552.0",
    "next": "^16.0.1",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.1.3",
    "typescript": "^5.7.2"
  }
}
